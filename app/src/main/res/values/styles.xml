<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    <item name="snackbarStyle">@style/snackbar_style</item>
    <item name="snackbarButtonStyle">@style/snackbar_button</item>
    <item name="snackbarTextViewStyle">@style/snackbar_text</item>
    <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
    </style>


    <style name="AppbarTitle">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
    </style>

    <style name="AppbarTitle2" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
    </style>

    <style name="AppbarTitle1" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">#ffffff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
    </style>

    <style name="snackbar_style" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="snackbar_button" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/green</item>
        <item name="android:drawableEnd">@drawable/ic_cart</item>
    </style>

    <style name="snackbar_text" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButton</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogBodyText</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitleText</item>
    </style>

    <style name="PositiveButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="NegativeButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
    </style>

    <style name="AlertDialogTitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AlertDialogBodyText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="SubTitleCollapsed" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">#ffffff</item>
        <item name="android:textSize">11sp</item>
        <item name="android:drawableStart">@drawable/ic_star_white</item>
    </style>

    <style name="SubTitleExpanded" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">#000000</item>
        <item name="android:textSize">13sp</item>
        <item name="android:drawableStart">@drawable/ic_star</item>
    </style>

    <style name="toolbar_title">
        <item name="android:textSize">
            18sp
        </item>
        <item name="android:textColor">
            @color/colorPrimaryDark
        </item>
    </style>

    <style name="otp_verific">
        <item name="android:textSize">
            30sp
        </item>
        <item name="android:textColor">
            #3D3939
        </item>
    </style>

    <style name="sub_title">
        <item name="android:textSize">
            13sp
        </item>
        <item name="android:textColor">
            #575555
        </item>
    </style>

    <style name="we_will_sen">
        <item name="android:textSize">
            12sp
        </item>
        <item name="android:textColor">
            #575555
        </item>
    </style>

    <style name="send_otp">
        <item name="android:textSize">
            18sp
        </item>
        <item name="android:textColor">
            @color/white
        </item>
    </style>

    <style name="type_mobile_no">
        <item name="android:textSize">
            15sp
        </item>
        <item name="android:textColor">
            #575555
        </item>
    </style>


    <style name="hi_how_to_c">
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:textColor">
            #1B163A
        </item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/colorAccent1</item>
        <item name="colorAccent">@color/colorAccentLight</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.ReceiveImage" parent="">
        <item name="cornerSizeBottomRight">12%</item>
        <item name="cornerSizeBottomLeft">12%</item>
        <item name="cornerSizeTopRight">12%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.SentImage" parent="">
        <item name="cornerSizeBottomRight">14%</item>
        <item name="cornerSizeBottomLeft">14%</item>
        <item name="cornerSizeTopLeft">14%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>

    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>